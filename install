echo -n "Are you sure to continue? [y] "
read check
if [ $check == y ]; then

	echo "Updateing system:"
	sudo pacman -Syu

	echo "Installing yay:"
	git clone https://aur.archlinux.org/yay.git
	cd yay
	makepkg -si
	cd ..
	rm -rf yay/

	echo "Installing programs:"
	sudo pacman -S git dunst kitty neofetch swaylock wofi swaybg
	yay hyprland
	yay wlogout
	
	echo "Creating folder in .config/:"
	mkdir ~/.config/dunst/ 
	mkdir ~/.config/hypr/
	mkdir ~/.config/kitty/
	mkdir ~/.config/neofetch/
	mkdir ~/.config/swaylock
	mkdir ~/.config/wlogout/
	mkdir ~/.config/wofi/

	echo "Copying configs file in .config/ folders:"
	cp -r bash/.bashrc ~/.bashrc
	cp -r dunst/ ~/.config/
	cp -r hypr/ ~/.config/
	cp -r kitty/ ~/.config/
	cp -r neofetch/ ~/.config/
	cp -r swaylock/ ~/.config/
	cp -r wlogout/ ~/.config/
	cp -r wofi/ ~/.config/

	echo "Starting Hyprland:"
	Hyprland

else
	echo "press 'y' to continue the installation" 
fi


