echo "are you sure to continue? [y]"
read check
if [ $check == y ]; then

	echo "installing programs"

	sudo pacman -Syu
	sudo pacman -S git dunst kitty neofetch swaylock  wofi
	git clone https://aur.archlinux.org/yay.git
	cd yay
	makepkg -si
	cd ..
	rm -rf yay/
	yay hyprland
	yay wlogout

	mkdir ~/.config/dunst/ 
	mkdir ~/.config/hypr/
	mkdir ~/.config/kitty/
	mkdir ~/.config/neofetch/
	mkdir ~/.config/swaylock
	mkdir ~/.config/wlogout/
	mkdir ~/.config/wofi/

	cp -r bash/.bashrc ~/.bashrc
	cp -r dunst/ ~/.config/
	cp -r hypr/ ~/.config/
	cp -r kitty/ ~/.config/
	cp -r neofetch/ ~/.config/
	cp -r swaylock/ ~/.config/
	cp -r wlogout/ ~/.config/
	cp -r wofi/ ~/.config/

	Hyprland
fi


